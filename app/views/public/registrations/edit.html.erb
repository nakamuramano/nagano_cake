

<main>
  <div class="container">
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
    <div class="row">
    <h5>会員情報編集</h5>
    </div>
   <table class="table table-borderless">
    <tbody>
        <tr>
          <td>氏名</td>
          <td width="200"><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_area :address, size: "60x1" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.telephone_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "更新を保存", class: "btn btn-success px-4" %></td>
          <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger px-4" %></td>
        </tr>
        </tbody>
       </table>

   <% end %>
   </div>
</main>