<main>
  <div class="container">
    <h4>注文情報確認</h4>
    <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <% @total+= cart_item.subtotal %>
    </tr>
  </tbody>
  <% end %>
</table>
<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">送料</th>
      <td><%= @post_age %></td>
    </tr>
    <tr>
      <th scope="row">商品合計</th>
      <td><%= @total %></td>
      <% @total_payment = @post_age + @total %>

    </tr>
    <tr>
      <th scope="row">請求金額</th>
      <td ><%= @total_payment %></td>
    </tr>
  </tbody>
</table>

<strong>支払い方法</strong>


<strong>お届け先</strong>


<%= link_to "注文を確認する", orders_complete_path, class: "btn btn-success" %>
  </div>
</main>