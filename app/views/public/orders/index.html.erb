<main>
  <div class="container">
    <div class="row">
    <h5>注文履歴一覧</h5>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr class="table-active">
          <th scope="col" >注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">注文詳細</th>
        </tr>
      </thead>
      <%  @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %>
            </td>
          <td>
            <% order.order_details.each do |order_order_detail| %>
              <%= order_order_detail.item.name %></br>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited)  %>円</td>
          <td align="center"><%= link_to "表示する", public_order_show_path(order), class: "btn btn-primary px-4" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</main>