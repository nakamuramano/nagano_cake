<h1>注文履歴一覧</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払金額</th>
      <th scope="col">注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>Mark</td>
      <td><%= order.address %></td>
      <td><%= order.item.name %></td>
      <td><%= order.@total_payment %></td>
      <td><%= link_to "表示する", public_order_show_path, class: "btn btn-primary" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
