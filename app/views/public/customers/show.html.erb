<main>
  <div class="container">
    <div class="row">
      <h5>マイページ</h5>


      <h5>登録情報</h5>
   <%= link_to "編集する", public_customer_edit_path, class: "btn btn-success" %>


      <table class="table table-bordered">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h5>配送先</h5>
<%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %>

<h5>注文一覧</h5>
<%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>
</main>