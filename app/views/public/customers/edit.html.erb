<main>
  <div class="container">
    <div class="row">
      <h5>会員情報編集</h5>
        　<%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
   <table class="table table-borderless">

      <tbody>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address %></td>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td>電話番号</td>
          <td><%= f.telephone_field :telephone_number %></td>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
        </tr>
      </tbody>
        <tr>
          <td></td>
          <td><%= f.submit "更新を保存", class: "btn btn-success" %></td>
        </tr>
        </tbody>
       </table>

　　<% end %>

    </div>
  </div>
</main>



