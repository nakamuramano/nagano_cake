<main>
  <div class="container">
    <main>
      <h4>商品一覧(全<%= @items.count %>件)</h4>

      <% @item.each do |item| %>
        <%= link_to public_item_show_path(item.id) do %>
          <%= image_tag item.get_image(200,200) %>
        <% end %></br>
          <%= item.name %></br>
          ¥<%= item.price.to_s(:delimited) %></br>
      <% end %>

      <%= paginate @item %>
    </main>
  </div>
</main>

