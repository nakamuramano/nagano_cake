<main>
  <div class="container">
    <main>
      <h4>商品一覧(全<%= @items.count %>件)</h4>

      <% @item.each do |item| %>
          <%= image_tag item.get_image(200,200) %></br>
          <%= item.name %></br>
          ¥<%= item.with_tax_price.to_s(:delimited) %></br>
      <% end %>

      <%= paginate @item %>
    </main>
  </div>
</main>

