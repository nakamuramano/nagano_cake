<main>
    <div class="container">
        <h4>ショッピングカート</h4>
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :destroy, class: "btn btn-danger" %>

        <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td>
          <%= cart_item.amount %>
      </td>
      <td></td>
      <td><%= link_to "削除する", cart_item_destroy_path(cart_item), method: :destroy, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
    </div>
</main>