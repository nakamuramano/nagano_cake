<main>
  <div class="container">
    <%= form_with model: @admin_customer, url: admin_customer_update_path, method: :patch do |f| %>
    <div class="row">
    <h5><%= @admin_customer.last_name %><%= @admin_customer.first_name %>さんの会員詳細編集</h5>
    </div>
   <table class="table table-borderless">
    </tbody>
      <tr>
        <td width="200">会員ID</td>
        <td> <%= @admin_customer.id %></td>
      </tr>
    </tbody>
      <tbody>
        <tr>
          <td>氏名</td>
          <td width="200"><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
      </tbody>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
      </tbody>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_area :address, size: "60x1" %></td>
        </tr>
        </tbody>
      </tbody>
        <tr>
          <td>電話番号</td>
          <td><%= f.telephone_field :telephone_number %></td>
          <td></td>
        </tr>
        </tbody>
      </tbody>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
          <td></td>
        </tr>
        </tbody>
      </tbody>
      </tbody>
        <tr>
          <td>会員ステータス</td>
          <% if @admin_customer.is_active? %>
            <td class="text-success">有効</td>
          <% else %>
            <td lass="text-secondary">退会</td>
          <% end %>
        </tr>
        </tbody>
      </tbody>
        <tr>
          <td></td>
          <td><%= f.submit "更新を保存", class: "btn btn-success px-4" %></td>
        </tr>
        </tbody>
       </table>

   <% end %>
   </div>
</main>