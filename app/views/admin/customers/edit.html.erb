<main>
  <h4><%= @admin_customer.last_name %><%= @admin_customer.first_name %>さんの会員詳細</h4>

    <div class="field">
    <p>会員ID </p>
    <%= @admin_customer.id %>
  </div>

  <% form_with madel: @admin_customer, url: admin_customer_update_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label "名前  (姓)" %>
    <%= f.text_field :last_name %>
    <%= f.label "(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ(セイ)" %>
    <%= f.text_field :last_name_kana %>
    <%= f.label "(メイ)" %>
    <%= f.text_field :first_name_kana%>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "更新を保存", class: "btn btn-success" %>
  </div>
<% end %>
</main>