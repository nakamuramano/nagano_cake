<main>
  <div class="container">
    <div class="row">
      <h5>商品一覧</h5>
      
      <%= link_to admin_items_new_path do %>
        <i class="fas fa-plus-circle fa-3x" style="color: gray;"></i>
      <% end %>
        <table class="table">
          <thead>
            <tr class="table-active">
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜価格</th>
              <th scope="col">ジャンル</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
            <tbody>
              <tr>
                <td scope="row"><%= item.id %></td>
                <td>
                  <%= link_to admin_items_show_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
        <%= paginate @items %>
    </div>
  </div>
</main>