<main>
  <div class="container">
    <div class="row">
      <h4>商品一覧</h4>
      <%= link_to admin_items_new_path do %>
        <i class="fas fa-plus-circle fa-3x" style="color: gray;"></i>
      <% end %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜価格</th>
              <th scope="col">ジャンル</th>
              <th scope="col">ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
            <tbody>
              <tr>
                <th scope="row"><%= item.id %></th>
                <td>
                  <%= link_to admin_items_show_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td class="text-success"><%= item.is_active %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
        <%= paginate @items %>
    </div>
  </div>
</main>