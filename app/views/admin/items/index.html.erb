
<main>
  <div class="container">
    <div class="row">
      <h5>商品一覧</h5>
       <div class="icon">
      <%= link_to admin_items_new_path do %>
        <i class="fas fa-plus-circle fa-3x" style="color: gray;"></i>
      <% end %>
       </div>
        <table class="table table-borderless", id="border">
          <thead>
            <tr class="table-active">
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜価格</th>
              <th scope="col">ジャンル</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
            <tbody>
              <tr>
                <td width="100"><%= item.id %></td>
                <td width="200" class="link">
                  <%= link_to admin_items_show_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td width="100"><%= item.price.to_s(:delimited) %></td>
                <td width="100"><%= item.genre.name %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
        <div class="paginate">
         <%= paginate @items %>
        </div>
    </div>
  </div>
</main>