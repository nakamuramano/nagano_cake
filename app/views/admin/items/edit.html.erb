<main>
  <div class="container">
    <div class="row">
      <h4>商品編集</h4>

      <%= form_with model: @item, url: admin_items_update_path, method: :patch do |f| %>
        <div class="form-group"><label>商品画像</label>
          <%= f.file_field :image, accept: "image/*" %><br>
        </div>

        <div class="form-group"><label>商品名</label>
          <%= f.text_field :name, placeholder: "商品名" %><br>
        </div>

        <div class="form-group"><label>商品説明</label>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>
        </div>

        <div class="form-group"><label>ジャンル</label>
        　　<%= f.select :genre_id,options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '選択してください'} %><br>
        </div>

        <div class="form-group"><label>税抜価格</label>
          <%= f.text_field :price, placeholder: "1000" %><span>円</span><br>
        </div>

        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</main>