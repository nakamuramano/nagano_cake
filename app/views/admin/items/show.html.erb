<main>
  <div class="container">
    <div class ="row">
      <h4>商品詳細</h4>

      <% @item.each do |item| %>
        <%= image_tag item.image %>

       <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= item.introduction %></td>
          </tr>
        </tbody>
          <tr>
            <td>ジャンル</td>
            <td><%= item.genre_id %></td>
          </tr>
        </tbody>
          <tr>
            <td>税込価格</br>(税込価格)</td>
            <td><%= item.price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= item.is_active %></td>
          </tr>
        </tbody>
       </table>
       <%= limk_to '編集', admin_items_edit_path(item.id) %>
      <% end %>
    </div>
  </div>
</main>