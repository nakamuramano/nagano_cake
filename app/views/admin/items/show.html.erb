<main>
  <div class="container">
    <div class="row">
      <h5>商品詳細</h5>
    </div>
    <div class="container-item">
      <div class="d-flex justify-content-around">
        <%= image_tag @item.get_image(270,270) %>

        <div class="row">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
            </tbody>
              <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
              </tr>
            </tbody>
              <tr>
                <td>税込価格</br>(税抜価格)</td>
                <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
              </tr>
              <tr>
                <td colspan="2" align="center"><%= link_to '編集する', admin_items_edit_path(@item.id), class: "btn btn-success px-4" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>