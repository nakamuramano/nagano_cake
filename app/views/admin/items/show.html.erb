<main>
  <div class="container">
    <div class ="row">
      <h4>商品詳細</h4>

        <%= image_tag @item.image %>

       <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
        </tbody>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
        </tbody>
          <tr>
            <td>税込価格</br>(税込価格)</td>
            <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td class="text-success"><%= @item.is_active %></td>
          </tr>
        </tbody>
       </table>
       <%= link_to '編集', admin_items_edit_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</main>