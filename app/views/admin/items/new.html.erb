<main>
  <div class="container">
    <div class="row">
      <h5>商品新規登録</h5>
    </div>
    <div class="row">
        <div  class="mx-auto">
        <table class="table table-borderless">
         <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
          <tbody>
            <tr>
              <td width="150"><div class="form-group"><label>商品画像</label></div></td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td width="150"><div class="form-group"><label>商品名</label></div></td>
              <td><%= f.text_field :name, placeholder: "商品名", size: 40 %></td>
            </tr>
            <tr>
              <td width="150"><div class="form-group"><label>商品説明</label></div></td>
              <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "40x6" %></td>
            </tr>
            <tr>
              <td width="150"><div class="form-group"><label>ジャンル</label></div></td>
              <td><%= f.select :genre_id,options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '選択してください'} %></td>
            </tr>
            <tr>
              <td width="150"><div class="form-group"><label>税抜価格</label></div></td>
              <td><%= f.text_field :price, placeholder: "1000", size: 40 %>円</td>
            </tr>
            <tr>
              <td width="150"></td>
              <td><%= f.submit '新規登録', class: "btn btn-success px-4" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
        </div>
    </div>
  </div>
</main>