

<main>
  <div class="container">
    <div class="row">
      <h5>ジャンル編集</h5>
    </div>
     <div class="row" >
       <%= form_with model: @genre, url: admin_genres_update_path, method: :patch do |f| %>
        <table class="table table-borderless">
         <tbody>
          <tr>
            <th width="170">ジャンル名</th>
            <td width="300"><%= f.text_field :name, size: 25 %></td>
            <td><%= f.submit '変更を保存', class: "btn btn-success px-4" %></td>
          </tr>
         </tbody>
        </table>
       <% end %>
        </div>

    </div>
  </div>

</main>
