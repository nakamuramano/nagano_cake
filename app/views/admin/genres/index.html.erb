<main>
  <div class="container">
    <div class="row">

      <h4>ジャンル一覧・追加</h4>
    </div>

      <span>ジャンル名</span>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>

          <%= f.submit '新規登録' %>
        <% end %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', admin_edit_path(genre.id), class: "btn btn-primary" %></td>
            </tr>
           <% end %>
        </tbody>
      </table>

    </div>
  </div>

</main>

