<main>
  <div class="container">
    <div class="row">
      <h4>ジャンル一覧・追加</h4>
    </div>
    
    <span>ジャンル名</span>
    
   <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <div class="box">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="box">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="box">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>

    
  </div>
  
</main>

