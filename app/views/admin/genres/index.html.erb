<main>
  <div class="container">
    <div class="row">
      <h5>ジャンル一覧・追加</h5>
    </div>
     <div class="row" >
       <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
         <tbody>
          <tr>
            <th width="170">ジャンル名</th>
            <td width="300"><%= f.text_field :name, placeholder: "ジャンル名", size: 25 %></td>
            <td><%= f.submit '新規登録', class: "btn btn-success px-4" %></td>
          </tr>
         </tbody>
        </table>
       <% end %>
        </div>
      <div class="table-genre">
      <table class="table", id="border">
        <thead>
          <tr>
            <td class="table-active" align="center"><strong>ジャンル</strong></td>
            <td class="table-active"></td>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td align="right"><%= link_to '編集する', admin_genres_edit_path(genre.id), class: "btn btn-success px-4" %></td>
            </tr>
           <% end %>
        </tbody>
      </table>
      </div>

    </div>
  </div>

</main>
