
<main>
<h4>注文履歴一覧</h4>

<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
    </tr>
  </thead>
  <%= @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to admin_order_show_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td><%= order.order_details.amount %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @orders %>


</main>